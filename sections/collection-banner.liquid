
<div class="collection-banner" 
  style="
  position: relative; 
  width: 80%; 
  height: 320px; 
  margin: 0 auto 10px auto;
  background-color: black;
  ">
  {% if section.settings.banner_image %}
    <img 
      src="{{ section.settings.banner_image | image_url: width: 1250 }}" 
      alt="{{ section.settings.heading }}" 
      width="{{ section.settings.banner_image.width | default: 1250 }}" 
      height="{{ section.settings.banner_image.height | default: 320 }}" 
      style="width: 100%; height: 100%; object-fit: cover; display: block;">
    {% endif %}
    
    {% assign text_position = section.settings.text_alignment %}

    <div style="
      position: absolute;
      top: 50%;
      {% if text_position == 'right' %}
        left: 75%;
      {% elsif text_position == 'middle' %}
       left: 50%;
      {% else %}
        left: 25%;
      {% endif %}
      transform: translate(-50%, -50%);
      color: white;
      text-align: center;
      max-width: 500px;
      margin: 0 auto;
      ">
      <h2 style="font-size: 64px;
        margin: 0 0 10px 0;
        white-space: nowrap; 
        overflow: hidden;">
        {{ section.settings.heading }}
      </h2>
      <h2 style="font: var(--typeBasePrimary); font-size: 15px; margin: 0 0 15px 0; line-height: 1.4;">
        {{ section.settings.description }}
      </h2>
      <div style="
        position: absolute;
        bottom: -65px;
        left: 50%;
        transform: translateX(-50%);"
      >
        <a 
          href="{{ section.settings.button_link }}" 
          class="btn"
          style="
          white-space: nowrap;
          padding: 5px 20px;
          font: var(--typeBasePrimary);
           font-size: 14px;" 
        >
          {{ section.settings.button_text }}
        </a>
        </div>
    </div>
  </div>
  
  {% schema %}
  {
    "name": "Collection Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Banner Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Explore Our Collection"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Explore Our Collection"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Shop Now"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Link to Collection"
      },
      {
    "type": "select",
    "id": "text_alignment",
    "label": "Text Alignment",
    "default": "right",
    "options": [
      {
        "value": "right",
        "label": "Right"
      },
      {
        "value": "left",
        "label": "Left"
      },
      {
        "value": "middle",
        "label": "Middle"
      }
    ]
  }
    ],
    "presets": [
      {
        "name": "Collection Banner",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}